<div class="row">
    <div class="col-md-6 col-md-offset-3">
          <%= form_for @user, :html => {:class => "contact-form", :id => "contactForm"} do |f| %>
            <div id="messages">
              <% if @user.errors.any? %>
                <h2><%= pluralize(@user.errors.count, "error") %> prevented this user from saving:</h2>
                <ul>
                  <% @user.error.full_messages.each do |msg| %>
                  <li><%= msg %></li>
                  <% end %>
                </ul>
              <% end %>
            </div>
            <div class="form-group form-icon-group">
              <%= f.text_field :email, class: "form-control", :placeholder => "email" %>
              <i class="fa fa-user"></i>
            </div>
            <div class="form-group form-icon-group">
              <%= f.text_area :about, class: "form-control", :placeholder => "Describe yourself" %>
              <i class="fa fa-pencil"></i>
            </div>
            <div class="form-group text-center">
              <%= f.submit "Submit", class: "btn btn-primary btn-icon btn-icon-right" %>
            </div>
          <% end %>
      </div>
</div>