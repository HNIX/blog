<div id="post_show_content" class="wrapper wrapper_padding_video" >
  <div id="content">
    <div class="embed-container">
  	  <%= embed(@video.link) %>
    </div>
    <br>
    <div class="video_header">
  	  <h1><%= @video.title %></h1>
      <hr>
    </div>
  </div>

  <div class="skinny_wrapper_left">
    <p class="date"><%= @video.created_at.strftime('%A, %b %d') %></p>
    <%= markdown @video.description %>
    <hr>
    <h4>Comments</h4>
    <%= render 'disqus' %>
  </div>

  <% if user_signed_in? %>
    <div id="admin_links">
      <%= link_to "Edit", edit_video_path(@video) %>
      <%= link_to "Delete", project_path(@video), method: :delete, data: {confirm: "Are you sure?"} %>
    </div>
  <% end %>

</div>