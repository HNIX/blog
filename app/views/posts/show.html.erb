<div id="content" role="main">
	<section class="section swatch-white-blue">
    <div class="container">
      <% if @post.link.present? %>
        <figure class="portfolio-video">
          <div class="video-wrapper">
              <div class="fluid-width-video-wrapper" style="padding-top: 50%;">
                  <%= embed(@post.link) %>
              </div>
          </div>
        </figure>
      <% end %>
      <div class="row">
				<div class="col-md-9">
			    	<p class="date"></p>
				    <h1 class="super hairline bordered-header">
				      <%= @post.title %>
					</h1>
				    <small class="post-author">
				  		<%= @post.created_at.strftime('%A, %b %d') %>
					</small>
				    <div class="post-body">
				        <%= markdown @post.content %>
				    </div>
					<% if user_signed_in? %>
					  <div id="admin_links">
					  	<%= link_to "Edit", edit_post_path(@post) %>
					    <%= link_to "Delete", post_path(@post), method: :delete, data: {confirm:"Are you sure you want to delete this post?"} %>
					  </div>
					<% end %>
					<br>
          <br>
          <h1>Comments</h1>
          <%= render 'disqus' %>
				</div>
				<aside class="col-md-3 sidebar">
          <% if @post.link.present? %>
            <a class="portfolio-url overlay" href="<%= @post.link %>">
                <span class="overlay">URL</span>
                Go to video
            </a>
          <% end %>
          <%= render 'shared/social_share' %>
          <%= render 'shared/recent_posts' %>
          <%= render 'shared/tweets' %>
        </aside>
			</div>
		</div>
	</section>
</div>






